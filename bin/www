#!/usr/bin/env node

//  Cargamos los modulos
var app = require('../app');
var debug = require('debug')('blog:server');
var http = require('http');

//  Configuramos el puerto
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

//  Creamos el servidor http
var server = http.createServer(app);

//  Escuchamos el puerto configurado previamente y escuchamos los errores
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

//  Normalizacion del puerto (No necesario)
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // salimos por un pipe
    return val;
  }

  if (port >= 0) {
    // salimos por un puerto
    return port;
  }

  return false;
}

//  Escuchamos los eventos de tipo error (no necesario)
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  //  Manejo de errores especificos
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' No tiene los permisos necesarios');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' ya en uso');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

//  Escuchamos el servidor
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Escuchando ' + bind);
}
